<BorderPane prefHeight="334.0" prefWidth="508.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.171" fx:controller="it.polito.tdp.spellchecker.controller.SpellCheckerController">
   <left>
      <VBox prefHeight="334.0" prefWidth="508.0" BorderPane.alignment="CENTER">
         <children>
            <Label alignment="CENTER" prefHeight="21.0" prefWidth="858.0" text="Lab03_SpellChecker" textAlignment="CENTER" />
            <HBox prefHeight="33.0" prefWidth="824.0">
               <children>
                  <Label alignment="CENTER" prefHeight="53.0" prefWidth="196.0" text="Choose the language..." />
                  <ComboBox prefWidth="150.0" promptText="Language" />
               </children>
            </HBox>
            <TextArea fx:id="txtWord" prefHeight="92.0" prefWidth="416.0" />
            <HBox prefHeight="38.0" prefWidth="508.0">
               <children>
                  <Label alignment="BOTTOM_LEFT" prefHeight="46.0" prefWidth="110.0" text="Wrong words" />
                  <Button fx:id="btnSpellChecker" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#doSpellCheck" prefHeight="38.0" prefWidth="104.0" text="Spell_check">
                     <HBox.margin>
                        <Insets left="300.0" />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>
            <TextArea fx:id="txtResult" prefHeight="118.0" prefWidth="508.0" />
            <Button fx:id="btnClearText" mnemonicParsing="false" onAction="#doClearText" text="Clear text">
               <VBox.margin>
                  <Insets left="424.0" />
               </VBox.margin>
            </Button>
         </children>
      </VBox>
   </left>
